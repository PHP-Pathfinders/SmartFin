<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Transactions PDF</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }
        .header {
            text-align: center;
            margin-bottom: 40px;
        }
        .header img {
            border-radius: 50%;
            width: 100px;
            height: 100px;
        }
        .header h1 {
            margin: 10px 0;
        }
        .transaction-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        .transaction-table th, .transaction-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        .transaction-table th {
            background-color: #f2f2f2;
        }
        .category-circle {
            display: inline-block;
            width: 20px;
            height: 20px;
            border-radius: 50%;
        }
    </style>
</head>
<body>
<div class="header">
    <img src="{{ imageSrc }}" alt="Avatar">
    <h1>{{ fullName }}</h1>
    <p>{{ email }}</p>
</div>
<table class="transaction-table">
    <thead>
    <tr>
        <th>Payment Type</th>
        <th>Amount</th>
        <th>Category</th>
        <th>Type</th>
        <th>Date</th>
    </tr>
    </thead>
    <tbody>
    {% for transaction in transactions %}
        <tr>
            <td>{{ transaction.paymentType ? transaction.paymentType : 'N/A' }}</td>
            <td>{{ transaction.moneyAmount }}</td>
            <td>
                <div class="category-circle" style="background-color: {{ transaction.color }};"></div>
                {{ transaction.categoryName }}
            </td>
            <td>{{ transaction.type }}</td>
            <td>{{ transaction.year }}-{{ transaction.month }}-{{ transaction.day }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</body>
</html>
